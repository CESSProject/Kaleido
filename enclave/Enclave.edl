enclave {
    from "sgx_tstd.edl" import *;
    from "sgx_stdio.edl" import *;
    from "sgx_backtrace.edl" import *;
    from "sgx_thread.edl" import *;
    from "sgx_tstdc.edl" import *;
    trusted {
        public sgx_status_t get_rng(size_t len, [out, size=len] uint8_t* value);
        public sgx_status_t test_pbc();
        public sgx_status_t gen_keys([in, size=seed_len] uint8_t* seed, size_t seed_len);
        public sgx_status_t process_data([in, size=data_len] uint8_t* data, size_t data_len, size_t block_size, size_t segment_size, [out] size_t* sigmas_len, [out] size_t* u_len);
        public sgx_status_t sign_message([in, size=data_len] uint8_t* data, size_t data_len, size_t sig_len, [out, size=sig_len] uint8_t* sig);
        public sgx_status_t get_public_key(size_t pkey_len, [out, size=pkey_len] uint8_t* pkey);
        public sgx_status_t get_signature(size_t index, size_t sig_len, [out, size=sig_len] uint8_t* sig);
        public sgx_status_t get_sigmas(size_t index, size_t sigmas_len, [out, size=sigmas_len] uint8_t* sigmas_out);
        public sgx_status_t get_u(size_t index, size_t u_len, [out, size=u_len] uint8_t* u_out);
    };
};
