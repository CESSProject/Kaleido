<!-- Please refer to User's Guide for the explanation of each field -->
<EnclaveConfiguration>
  
  <!-- ISV assigned Product ID -->
  <ProdID>0</ProdID>  
  
  <!-- ISV assigned SVN -->
  <ISVSVN>0</ISVSVN>  
  
  <!-- The stack size per trusted thread (in bytes) --> 
  <StackMaxSize>0x400000</StackMaxSize>
  
  <!-- 128MB The heap size for the enclave (in bytes)-->
  <HeapMaxSize>0x8000000</HeapMaxSize>
  
  <!-- The number of trusted threads -->
  <!-- Kaleido requires at least 14 threads -->
  <TCSNum>16</TCSNum>

  <!-- TCS management policy -->
  <TCSPolicy>0</TCSPolicy>  

  <!-- Set it to 1 in production -->
  <DisableDebug>0</DisableDebug>

  <!-- Reserved for future use. Must be 0 --> 
  <MiscSelect>0</MiscSelect>  

  <!-- Reserved for future use. Must be 0xFFFFFFFF. -->
  <MiscMask>0xFFFFFFFF</MiscMask> 
</EnclaveConfiguration>
